<!-- Main Content Section -->
<div class="containerm mt-5 mb-5">
    <div class="col-md-10 form-container"> <!-- Container for form with pinkish background -->
        <h2 class="text-center mb-4">Rate Order @Model.OrderNumber</h2> <!-- Centered heading -->

        @if (Model.OrderDetails != null && Model.OrderDetails.Any())
        {
            <h4 class="text-center">Order Items</h4> <!-- Centered subheading -->
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Extras</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderDetails)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price.ToString("C", new CultureInfo("en-ZA"))</td>
                            <td>@item.Quantity</td>
                            <td>@( (item.Price * item.Quantity).ToString("C", new CultureInfo("en-ZA")) )</td>
                            <td>
                                @if (item.Extras.Any())
                                {
                                    <ul>
                                        @foreach (var extra in item.Extras)
                                        {
                                            <li>@extra.Name (@extra.Price.ToString("C", new CultureInfo("en-ZA")))</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span>No extras</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="text-center">No items found for this order.</p>
        }

        <h4 class="text-center">Rate This Order</h4>
        <form asp-action="SubmitRating" asp-controller="User" method="post">
            <div class="form-group">
                <label for="Rating">Rating (1-5)</label>
                <input type="number" min="1" max="5" class="form-control" name="ratingValue" value="5" required />
            </div>
            <div class="form-group">
                <label for="Comment">Leave a Comment</label>
                <textarea class="form-control" name="comment" required></textarea>
            </div>
            <input type="hidden" name="orderNumber" value="@Model.OrderNumber" />
            <button type="submit" class="btn btn-success">Submit Rating</button>
        </form>

        <!-- Back to Home button -->
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Dashboard" class="btn text-white" style="background-color: #c9302c;">Back home</a>
        </div>
    </div>
