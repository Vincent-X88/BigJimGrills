<div class="single-product-page">
    <div class="product-image">
        <img src="/database/images/menus/@Model.Product.Category/@Model.Product.ImageUrl" alt="@Model.Product.Name" />
    </div>

    <div class="product-info">
        <h2>@Model.Product.Name</h2>
        <p>@Model.Product.Description</p>
        <p class="price"><span class="currency">R</span>@Model.Product.Price</p>

        <h4>Select Extras:</h4>
        <div id="extras-list">
            @foreach (var extra in Model.Extras)
            {
                <div class="extra-item">
                    <input type="checkbox" id="extra_@extra.Id" name="extra" value="@extra.Id" data-price="@extra.Price" class="extra-checkbox">
                    <label for="extra_@extra.Id">@extra.Name (+R@(extra.Price.ToString("0.00"))) </label>
                </div>
            }
        </div>

        <h4>Special Note:</h4>
        <textarea id="special-note" rows="4" placeholder="Enter your special note here..."></textarea>

        <p class="total-price">Total Price: R<span id="total-price">@Model.Product.Price</span></p>

        <!-- Conditionally render the button based on product availability -->
        @if (Model.IsAvailable)
        {
            <button class="btn btn-primary" onclick="addToCartWithExtras(@Model.Product.Id, @Model.Product.Price)">Add to Cart</button>
        }
        else
        {
            <button class="btn btn-danger" disabled>Item Not Available</button>
        }
    </div>
</div>


<!-- Toast Notification -->
<div id="toast" class="toast"></div>

<script>
    // Update the total price when extras are selected
    document.querySelectorAll('.extra-checkbox').forEach(function (checkbox) {
        checkbox.addEventListener('change', function () {
            updateTotalPrice();
        });
    });

    function updateTotalPrice() {
        let basePrice = parseFloat('@Model.Product.Price');
        let totalPrice = basePrice;

        document.querySelectorAll('.extra-checkbox:checked').forEach(function (checkbox) {
            totalPrice += parseFloat(checkbox.getAttribute('data-price'));
        });

        document.getElementById('total-price').textContent = totalPrice.toFixed(2);
    }

    function showToast(message, success = true) {
        const toast = document.getElementById('toast');
        toast.textContent = message;
        toast.className = success ? 'toast show toast-success' : 'toast show toast-error';

        // Hide the toast after 3 seconds
        setTimeout(() => {
            toast.className = 'toast';
        }, 3000);
    }

    function addToCartWithExtras(productId, basePrice) {
        let selectedExtras = [];
        let specialNote = document.getElementById('special-note').value; // Get the special note

        document.querySelectorAll('.extra-checkbox:checked').forEach(function (checkbox) {
            selectedExtras.push(parseInt(checkbox.value));
        });

        $.ajax({
            url: '@Url.Action("AddToCart", "Cart")',
            type: 'POST',
            data: {
                productId: productId,
                price: basePrice,
                extraIds: selectedExtras,
                note: specialNote // Send the special note
            },
            success: function (response) {
                if (response.success) {
                    showToast('Product added to cart with extras!', true);
                } else {
                    showToast('Failed to add to cart: ' + response.message, false);
                }
            }
        });
    }
</script>

