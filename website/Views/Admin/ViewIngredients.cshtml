 <script>
   $(document).ready(function () {
    $('#notificationDropdown').on('click', async function (event) {
    

        // Clear current notifications
        $('#notificationsList').empty();
        
        console.log("Notification bell clicked, fetching notifications...");

        try {
            const response = await fetch('/Notifications/GetNotifications'); 
            if (!response.ok) throw new Error('Network response was not ok');
            
            const notificationsViewModel = await response.json();
            
            console.log("Fetched notifications:", notificationsViewModel);

            // Update notification count
            $('#notificationCount').text(notificationsViewModel.unreadNotificationCount || 0);

            if (notificationsViewModel.notifications && Array.isArray(notificationsViewModel.notifications) && notificationsViewModel.notifications.length > 0) {
                notificationsViewModel.notifications.forEach(notification => {
                    const notificationItem = `
                        <a class="dropdown-item" href="/Orders/ViewOrder/${notification.orderId}">
                            <small>${new Date(notification.createdAt).toLocaleString()}</small><br />
                            ${notification.message}
                        </a>
                    `;
                    $('#notificationsList').append(notificationItem);
                });
            } else {
                console.log("No notifications available.");
                $('#notificationsList').append('<a class="dropdown-item text-center">No new notifications</a>');
            }
        } catch (error) {
            console.error('Error fetching notifications:', error);
        }
    });
});

</script>

    

