<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        // Handle restock button click
        $('.restock-btn').on('click', function () {
            var ingredientId = $(this).data('id');
            var quantity = $('#restock-' + ingredientId).val();

            if (quantity && quantity > 0) {
                $.ajax({
                    url: '@Url.Action("Restock", "Admin")',
                    type: 'POST',
                    data: { id: ingredientId, quantity: quantity },
                    success: function (response) {
                        if (response.success) {
                            alert('Restocked successfully!');
                            location.reload(); // Reload to reflect the updated quantity
                        } else {
                            alert('Error: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Error while restocking.');
                    }
                });
            } else {
                alert('Please enter a valid quantity.');
            }
        });

        // Client-side search
        $("#ingredientSearch").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#ingredientTableBody tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
            });
        });

        // Client-side pagination
        var itemsPerPage = 10;
        var $tableBody = $("#ingredientTableBody");
        var $rows = $tableBody.find("tr");
        var totalItems = $rows.length;
        var totalPages = Math.ceil(totalItems / itemsPerPage);

        function showPage(page) {
            $rows.hide();
            $rows.slice((page - 1) * itemsPerPage, page * itemsPerPage).show();
            $(".pagination li").removeClass("active");
            $(".pagination li[data-page='" + page + "']").addClass("active");
        }

        function createPagination() {
            for (var i = 1; i <= totalPages; i++) {
                $("#pagination").append('<li class="page-item" data-page="' + i + '"><a class="page-link" href="#">' + i + '</a></li>');
            }
            $(".pagination li:first").addClass("active");
        }

        createPagination();
        showPage(1);

        $(document).on("click", ".pagination li", function () {
            var page = $(this).data("page");
            showPage(page);
        });
    });
</script>

