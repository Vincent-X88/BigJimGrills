<div class="table-container">
    <h2>All Complaints</h2> <!-- Heading added -->

    <table class="table">
        <thead>
            <tr>
                <th>Order Number</th>
                <th>User ID</th>
                <th>Complaint</th>
                <th>Date Submitted</th>
                <th>Admin Response</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var complaint in Model)
            {
                <tr>
                    <td>@complaint.OrderNumber</td>
                    <td>@complaint.UserId</td>
                    <td>@complaint.Content</td>
                    <td>@complaint.SubmittedAt.ToShortDateString()</td>
                    <td>@(complaint.IsAdminResponded ? complaint.AdminResponse : "No response yet")</td>
                    <td>
                        @if (!complaint.IsAdminResponded)
                        {
                            <form asp-action="RespondToComplaint" method="post">
                                <input type="hidden" name="FeedbackId" value="@complaint.Id" />
                                <textarea name="AdminResponse" class="form-control" placeholder="Enter your response"></textarea>
                                <button type="submit" class="btn btn-dark mt-2">Submit Response</button>
                            </form>
                        }
                        else
                        {
                            <button class="btn btn-secondary" disabled>Responded</button>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
