<div class="table-container">
    <h2>Order Details</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Extras</th>
                <th>Special Note</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <img src="/database/images/menus/@item.Category/@item.ProductImage" alt="@item.ProductName" />
                        @item.ProductName
                    </td>
                    <td>@item.Quantity</td>
                    <td>@item.BasePrice.ToString("C", new CultureInfo("en-ZA"))</td>
                    <td>
                        @if (item.Extras != null && item.Extras.Any())
                        {
                            <ul>
                                @foreach (var extra in item.Extras)
                                {
                                    <li>@extra.Name - @extra.Price.ToString("C", new CultureInfo("en-ZA"))</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <span>No extras</span>
                        }
                    </td>
                    <td>@item.SpecialNote</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post" action="@Url.Action("UpdateOrderStatus", "Cart")">
        <input type="hidden" name="orderNumber" value="@Model.First().OrderNumber" />
        <p>Order Number: @Model.First().OrderNumber</p>
        <select name="status" required>
            <option value="">Select Status</option>
            <option value="Order Collected">Order Collected</option>
        </select>
        <button type="submit">Update Order</button>
    </form>
